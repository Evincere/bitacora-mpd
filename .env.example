# Este es un archivo de ejemplo para las variables de entorno
# Copie este archivo a .env y complete con sus valores reales
# NO incluya información sensible en este archivo de ejemplo

# Base de datos
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bitacoradb
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password

# JWT
# Utilice una clave segura y larga en producción
JWT_SECRET=your_secure_jwt_secret_key_here
JWT_EXPIRATION=86400000

# Docker Hub
DOCKER_HUB_USERNAME=your_dockerhub_username

# Puertos
BACKEND_PORT=8080
FRONTEND_PORT=3000
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
ZIPKIN_PORT=9411

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_secure_password

# Google OAuth (requerido para autenticación con Google)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8080/api/auth/google/callback

# Configuración de correo electrónico
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your_email_username
MAIL_PASSWORD=your_email_password
MAIL_FROM=no-reply@example.com

# URLs de la aplicación
APP_URL=http://localhost:3000
API_URL=http://localhost:8080/api

# Configuración de seguridad
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
