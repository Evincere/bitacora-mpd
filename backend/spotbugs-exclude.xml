<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter
    xmlns="https://github.com/spotbugs/filter/3.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://github.com/spotbugs/filter/3.0.0 https://raw.githubusercontent.com/spotbugs/spotbugs/3.1.0/spotbugs/etc/findbugsfilter.xsd">

    <!-- Exclude test classes -->
    <Match>
        <Class name="~.*\.*Test" />
    </Match>
    <Match>
        <Class name="~.*\.*IT" />
    </Match>
    <Match>
        <Class name="~.*\.*TestConfig" />
    </Match>

    <!-- Exclude generated code -->
    <Match>
        <Class name="~.*\.*MapperImpl" />
    </Match>

    <!-- Exclude model classes -->
    <Match>
        <Class name="~com\.bitacora\.domain\.model\..*" />
        <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2" />
    </Match>

    <!-- Exclude entity classes -->
    <Match>
        <Class name="~com\.bitacora\.infrastructure\.persistence\.entity\..*" />
        <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2" />
    </Match>

    <!-- Exclude DTO classes -->
    <Match>
        <Class name="~com\.bitacora\.infrastructure\.rest\.dto\..*" />
        <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2" />
    </Match>

    <!-- Exclude configuration classes -->
    <Match>
        <Class name="~com\.bitacora\.infrastructure\.config\..*" />
        <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2" />
    </Match>

    <!-- Exclude specific bugs -->
    <Match>
        <Bug code="EI,EI2" />
        <Class name="~.*DTO" />
    </Match>

    <!-- Exclude serialization issues in DTOs -->
    <Match>
        <Bug pattern="SE_NO_SERIALVERSIONID" />
        <Class name="~.*DTO" />
    </Match>

    <!-- Exclude specific bugs in Spring components -->
    <Match>
        <Bug pattern="EI_EXPOSE_REP,EI_EXPOSE_REP2" />
        <Class name="~.*Controller|.*Service|.*Repository|.*Component" />
    </Match>

    <!-- Exclude specific bugs in Spring configuration -->
    <Match>
        <Bug pattern="SPRING_CSRF_PROTECTION_DISABLED,SPRING_CSRF_UNRESTRICTED_REQUEST_MAPPING" />
        <Class name="~.*SecurityConfig" />
    </Match>

    <!-- Exclude specific bugs in test utilities -->
    <Match>
        <Bug pattern="ST_WRITE_TO_STATIC_FROM_INSTANCE_METHOD" />
        <Class name="~.*TestUtil" />
    </Match>
</FindBugsFilter>
